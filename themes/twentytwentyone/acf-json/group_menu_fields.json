{
  "key": "group_menu_fields",
  "title": "Menu Fields",
  "fields": [
    {
      "key": "field_menu_type",
      "label": "Menu Type",
      "name": "menu_type",
      "type": "select",
      "instructions": "Select the type of menu this represents",
      "required": 1,
      "conditional_logic": 0,
      "wrapper": {
        "width": "50",
        "class": "",
        "id": ""
      },
      "choices": {
        "regular": "Regular Menu",
        "holiday": "Holiday Menu",
        "seasonal": "Seasonal Menu",
        "special": "Special Event Menu"
      },
      "default_value": "regular",
      "allow_null": 0,
      "multiple": 0,
      "ui": 1,
      "ajax": 0,
      "return_format": "value",
      "placeholder": ""
    },
    {
      "key": "field_is_active",
      "label": "Active Menu",
      "name": "is_active",
      "type": "true_false",
      "instructions": "Check this box to make this the active menu displayed on the website. Only one menu should be active at a time.",
      "required": 0,
      "conditional_logic": 0,
      "wrapper": {
        "width": "50",
        "class": "",
        "id": ""
      },
      "message": "This is the active menu",
      "default_value": 0,
      "ui": 1,
      "ui_on_text": "Active",
      "ui_off_text": "Inactive"
    },
    {
      "key": "field_main_menu_pdf",
      "label": "Main Menu PDF",
      "name": "main_menu_pdf",
      "type": "file",
      "instructions": "Upload the main menu PDF file. This is required.",
      "required": 1,
      "conditional_logic": 0,
      "wrapper": {
        "width": "",
        "class": "",
        "id": ""
      },
      "return_format": "array",
      "library": "all",
      "min_size": "",
      "max_size": "10",
      "mime_types": "pdf"
    },
    {
      "key": "field_brunch_menu_pdf",
      "label": "Brunch Menu PDF (Optional)",
      "name": "brunch_menu_pdf",
      "type": "file",
      "instructions": "Upload the brunch menu PDF file if you have a separate brunch menu.",
      "required": 0,
      "conditional_logic": 0,
      "wrapper": {
        "width": "",
        "class": "",
        "id": ""
      },
      "return_format": "array",
      "library": "all",
      "min_size": "",
      "max_size": "10",
      "mime_types": "pdf"
    },
    {
      "key": "field_menu_description",
      "label": "Menu Description",
      "name": "menu_description",
      "type": "textarea",
      "instructions": "Optional description or notes about this menu (e.g., 'Holiday menu for December 2024', 'Updated prices effective January 1st')",
      "required": 0,
      "conditional_logic": 0,
      "wrapper": {
        "width": "",
        "class": "",
        "id": ""
      },
      "default_value": "",
      "placeholder": "Enter menu description or notes...",
      "maxlength": "",
      "rows": 3,
      "new_lines": "wpautop"
    },
    {
      "key": "field_effective_date",
      "label": "Effective Date",
      "name": "effective_date",
      "type": "date_picker",
      "instructions": "When should this menu become active? Leave blank for immediate activation.",
      "required": 0,
      "conditional_logic": 0,
      "wrapper": {
        "width": "50",
        "class": "",
        "id": ""
      },
      "display_format": "F j, Y",
      "return_format": "Y-m-d",
      "first_day": 1
    },
    {
      "key": "field_expiry_date",
      "label": "Expiry Date",
      "name": "expiry_date",
      "type": "date_picker",
      "instructions": "When should this menu expire? Leave blank if it doesn't expire.",
      "required": 0,
      "conditional_logic": 0,
      "wrapper": {
        "width": "50",
        "class": "",
        "id": ""
      },
      "display_format": "F j, Y",
      "return_format": "Y-m-d",
      "first_day": 1
    }
  ],
  "location": [
    [
      {
        "param": "post_type",
        "operator": "==",
        "value": "restaurant_menu"
      }
    ]
  ],
  "menu_order": 0,
  "position": "normal",
  "style": "default",
  "label_placement": "top",
  "instruction_placement": "label",
  "hide_on_screen": "",
  "active": true,
  "description": "Fields for managing restaurant menus"
}
